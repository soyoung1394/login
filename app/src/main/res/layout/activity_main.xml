<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sinabro.test.MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/btn_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ball"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:id="@+id/ball"
        />
    <com.ebanx.swipebtn.SwipeButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="500dp"
        app:inner_text="S O S"
        app:inner_text_size="16dp"
        app:inner_text_color="#8C8C8C"
        app:inner_text_bottom_padding="18dp"
        app:inner_text_top_padding="18dp"
        app:inner_text_background="@drawable/swipe1"
        app:button_image_disabled="@drawable/notifications_button"
        app:button_image_enabled="@drawable/notifications"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="18dp"
        app:button_bottom_padding="18dp"
        app:button_background="@drawable/swipe2"/>
</RelativeLayout>
